<div class="modal fade" id="new_meal_form">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%=t '.new_meal_header' %></h4>
      </div>
      <div class="modal-body">
        <p>One fine body&hellip;</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<h1><%=t '.scorecard_for', date: l(daily_scorecard.date) %></h1>

<nav>
  <ul class="pager">
    <li><%= link_to t('.previous_day_link'), daily_scorecard_path(daily_scorecard.previous.to_param), class: 'previous' %></li>
    <li><%= link_to t('.today_link'), daily_scorecard_today_path %></li>
    <li><%= link_to t('.next_day_link'), daily_scorecard_path(daily_scorecard.next.to_param), class: 'next' %></li>
  </ul>
</nav>

<div class="row">
  <div id="daily_scorecard_summary" class="col-md-4">
    <h2><%=t '.total_points' %>: <%= daily_scorecard.total_points %></h2>
    <h2><%=t '.summary_heading' %></h2>
    <table class="table table-striped">
      <tr>
        <th></th>
        <th><%=t '.servings_consumed_heading' %></th>
        <th><%=t '.servings_recomended_heading' %></th>
        <th><%=t '.points_earned_heading' %></th>
      </tr>
      <%= render partial: 'food_type_scorecard', collection: daily_scorecard.food_type_scorecards %>
    </table>
  </div>

  <div class="col-md-8">
    <h2><%=t '.meals_heading' %></h2>
    <div id="daily_scorecard_meals" class="row">
    </div>
    <div class="row text-center">
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal"
              data-target="#new_meal_form">
        <%=t '.add_meal_button' %>
      </button>
    </div>
  </div>

</div>
